.sidebar-view {
  position: relative;
}
.sidebar-view .siderbar {
  position: absolute;
  top: 0rpx;
  left: 100rpx;
  z-index: 20;
}
.sidebar-view .siderbar__item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 15rpx;
  border-radius: 10px;
  padding: 10rpx 20rpx;
  width: 100px;
  height: 40px;
  font-size: 28rpx;
  color: black;
  background: #E0E5EC;
  box-shadow: 7px 7px 15px rgba(55, 84, 170, 0.15), -7px -7px 20px white, inset 0px 0px 4px rgba(255, 255, 255, 0.2), inset 7px 7px 15px rgba(55, 84, 170, 0), inset -7px -7px 20px rgba(255, 255, 255, 0), 0px 0px 4px rgba(255, 255, 255, 0) !important;
  -webkit-transition: box-shadow 0.25s ease !important;
  transition: box-shadow 0.25s ease !important;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.sidebar-view .siderbar__item image {
  width: 40rpx;
}
.sidebar-view .siderbar__item:hover {
  background: #E0E5EC;
  box-shadow: 7px 7px 15px rgba(55, 84, 170, 0.15), -7px -7px 20px white, inset 0px 0px 4px rgba(255, 255, 255, 0), inset 7px 7px 15px rgba(55, 84, 170, 0.15), inset -7px -7px 20px white, 0px 0px 4px rgba(255, 255, 255, 0.2) !important;
}
.sidebar-view .siderbar__item::after {
  border: none !important;
}
.sidebar-view .mask {
  position: absolute;
  top: 0;
  left: -10vw;
  z-index: 10;
  width: 110vw;
  height: 100vh;
  background: transparent;
}
