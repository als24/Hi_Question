.radiogroup {
  margin: 0 auto;
  border-radius: 16px;
}
.radiogroup .wrapper {
  margin: 12px 0;
}
.radiogroup .state {
  position: absolute;
  top: 0;
  right: 0;
  opacity: 0.00001;
  pointer-events: none;
}
.radiogroup .label {
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  display: grid;
  width: 100%;
  word-wrap: break-word;
  word-break: break-all;
  color: #394A56;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  grid-template-columns: 1fr 9fr;
}
.radiogroup .text {
  margin-left: 16px;
  font-size: 28rpx;
  opacity: 0.6;
  -webkit-transition: opacity 0.2s linear, -webkit-transform 0.2s ease-out;
  transition: opacity 0.2s linear, -webkit-transform 0.2s ease-out;
  transition: opacity 0.2s linear, transform 0.2s ease-out;
  transition: opacity 0.2s linear, transform 0.2s ease-out, -webkit-transform 0.2s ease-out;
}
.radiogroup .indicator {
  overflow: hidden;
  position: relative;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  background: #E0E5EC;
  box-shadow: 3px 3px 6px #BEC3C9, -3px -3px 6px #FFFFFF;
}
.radiogroup .indicator::before, .radiogroup .indicator::after {
  position: absolute;
  top: 10%;
  left: 10%;
  border-radius: 50%;
  width: 80%;
  height: 80%;
  content: "";
}
.radiogroup .indicator::before {
  box-shadow: -4px -2px 4px 0px #D1D9E6, 4px 2px 8px 0px #FFFFFF;
}
.radiogroup .indicator::after {
  background-color: #ECF0F3;
  box-shadow: -4px -2px 4px 0px #FFFFFF, 4px 2px 8px 0px #D1D9E6;
  -webkit-transition: opacity 0.25s ease-in-out, -webkit-transform 0.25s ease-in-out;
  transition: opacity 0.25s ease-in-out, -webkit-transform 0.25s ease-in-out;
  transition: opacity 0.25s ease-in-out, transform 0.25s ease-in-out;
  transition: opacity 0.25s ease-in-out, transform 0.25s ease-in-out, -webkit-transform 0.25s ease-in-out;
  -webkit-transform: scale3d(1, 1, 1);
          transform: scale3d(1, 1, 1);
}
.right-checked .indicator::after {
  opacity: 0;
  -webkit-transform: scale3d(0.975, 0.975, 1) translate3d(0, 10%, 0);
          transform: scale3d(0.975, 0.975, 1) translate3d(0, 10%, 0);
}
.right-checked .text {
  font-size: 36rpx;
