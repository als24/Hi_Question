.eum-nav-icon {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-radius: 10px;
  width: 40px;
  height: 40px;
  background: #E0E5EC;
  box-shadow: -8px 8px 15px #BEC3C9, 8px -8px 15px #FFFFFF;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.eum-nav-icon text {
  margin: 4rpx 0;
  border-radius: 4px;
  width: 20px;
  height: 4rpx;
  background-color: lightcoral;
  box-shadow: 0 0 20rpx 0 rgba(240, 128, 128, 0.3);
  -webkit-transition: margin 0.4s cubic-bezier(0.79, 0.21, 0.06, 0.81), -webkit-transform 0.4s cubic-bezier(0.79, 0.21, 0.06, 0.81);
  transition: margin 0.4s cubic-bezier(0.79, 0.21, 0.06, 0.81), -webkit-transform 0.4s cubic-bezier(0.79, 0.21, 0.06, 0.81);
  transition: margin 0.4s cubic-bezier(0.79, 0.21, 0.06, 0.81), transform 0.4s cubic-bezier(0.79, 0.21, 0.06, 0.81);
  transition: margin 0.4s cubic-bezier(0.79, 0.21, 0.06, 0.81), transform 0.4s cubic-bezier(0.79, 0.21, 0.06, 0.81), -webkit-transform 0.4s cubic-bezier(0.79, 0.21, 0.06, 0.81);
}
.eum-nav-icon text:nth-child(2) {
  -webkit-transform-origin: 50% 50%;
          transform-origin: 50% 50%;
}
.eum-nav-icon.active {
  background: #E0E5EC;
  box-shadow: inset -5px 5px 9px #BEC3C9, inset 5px -5px 9px #FFFFFF;
}
.eum-nav-icon.active text {
  margin: -2rpx;
}
.eum-nav-icon.active text:nth-child(1) {
  -webkit-transform: rotate(-45deg);
          transform: rotate(-45deg);
}
.eum-nav-icon.active text:nth-child(2) {
  -webkit-transform: scale(0);
          transform: scale(0);
}
.eum-nav-icon.active text:nth-child(3) {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}
